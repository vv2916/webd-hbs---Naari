<body>
   {{>nav}}
    
    <form id="form_id" action="/login" method="post">
       <h1> Login</h1>

        <label for="username">Username</label>
        <input type="text" placeholder="Enter your username" id="username" name="username">

        <label for="password">Password</label>
        <input type="password" placeholder="Password" id="password" name="password">

        <input type="submit" value="Log In" class="button" id="submit">
       
    </form>

    <script>
        var attempt = 3; // Count no. of attempts left.
        function validate(){
        var username = document.getElementById("username").value;
        var password = document.getElementById("password").value;
        if ( username == "Shreya" && password == "shreya123"){
            window.location = "Naari.html   "; // Redirect to home page.
            return false;
        }
        
        else{
            attempt --; // -1 attempt
            alert("You have " + attempt + " attempt(s) left!");
            if( attempt == 0){
                document.getElementById("username").disabled = true;
                document.getElementById("password").disabled = true;
                document.getElementById("submit").disabled = true;
                return false;
            }
        }
    }
    
    </script>
  
